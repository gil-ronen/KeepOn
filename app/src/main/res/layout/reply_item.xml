<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/reply_writer_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:elevation="1dp"
            android:src="@drawable/default_profile_img" />

        <TextView
            android:id="@+id/reply_writer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name2" />

        <TextView
            android:id="@+id/reply_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01.08.2019"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <TextView
        android:id="@+id/reply_to_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="reply @Name1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/reply_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There is another exercise that is much better than your exercise!!!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="start|center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reply_like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_like" />

        <TextView
            android:id="@+id/likes_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="25" />

        <ImageView
            android:id="@+id/reply_dislike"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_dislike" />

        <TextView
            android:id="@+id/dislikes_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="5" />

        <TextView
            android:id="@+id/reply_reply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="REPLY" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>