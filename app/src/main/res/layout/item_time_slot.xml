<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_time_slot"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/bg_item_time_available"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/slot_group_icon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center|start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/slot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000C5D"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/slot_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ADADAD"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/slot_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F63EA5"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/if_slot_occupied_by_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This training is yours"
            android:textColor="#000C5D"
            android:textSize="12sp"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>