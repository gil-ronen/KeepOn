<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".trainee.ui.my_trainers.MyTrainerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_trainer_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <android.support.design.widget.TabLayout
            android:id="@+id/my_trainer_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/black"
            app:tabIndicatorColor="@color/purple">

            <android.support.design.widget.TabItem
                android:id="@+id/my_ratings_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ratings_tab_1" />

            <android.support.design.widget.TabItem
                android:id="@+id/online_ratings_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ratings_tab_2" />

        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/my_trainer_tab_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>