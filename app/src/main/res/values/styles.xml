<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="RatingBar">

        <item name="colorControlNormal">@color/light_purple</item>
        <item name="colorControlActivated">@color/purple</item>

    </style>

    <style name="RatingBarReview" parent="RatingBar">

        <item name="android:ratingBarStyle">?android:attr/ratingBarStyleSmall</item>

    </style>

    <style name="ProgressBar">

        <item name="colorControlNormal">@color/light_purple</item>
        <item name="colorControlActivated">@color/purple</item>
        <item name="android:progressBarStyle">?android:attr/progressBarStyleHorizontal</item>

    </style>

    <style name="SwitchCompat">

        <item name="colorControlNormal">@color/light_purple</item>
        <item name="colorControlActivated">@color/purple</item>

    </style>

</resources>
